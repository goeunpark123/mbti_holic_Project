<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/anonymousImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_account_box_gray_24dp" />

        <TextView
            android:id="@+id/anonymousTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/anonymousImageView"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/anonymousImageView"
            android:text="익명"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anonymousTextView"
            android:layout_toRightOf="@+id/anonymousImageView"
            android:text="05/24 14:19"
            android:textColor="#aaa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rectangle_round_border_radius_6_gray_background"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ic_thumb_up_outline_gray_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:text="공감"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="컨텐트"
        android:textSize="14sp"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_thumb_up_outline_red_24dp"/>
        <TextView
            android:id="@+id/likeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="0"
            android:textSize="12dp"
            android:textColor="#F4511E"/>
<!--        <ImageView-->
<!--            android:id="@+id/replyImageView"-->
<!--            android:layout_width="12dp"-->
<!--            android:layout_height="12dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginRight="5dp"-->
<!--            android:src="@drawable/ic_mode_comment_outline_blue_24dp"/>-->
<!--        <TextView-->
<!--            android:id="@+id/replyCountTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="16dp"-->
<!--            android:text="0"-->
<!--            android:textSize="12dp"-->
<!--            android:textColor="#26C6DA"/>-->
    </LinearLayout>
</LinearLayout>