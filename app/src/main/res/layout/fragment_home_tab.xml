<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".HomeTabFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="MBTI 16가지 성격유형"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/myBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_person_black_24dp"
        android:padding="0sp"
        android:scaleType="centerCrop" />
</LinearLayout>

<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="30dp">
    <TableRow>

        <Button
            android:id="@+id/btnISTJ"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/sky"

            android:text="ISTJ" />

        <Button
            android:id="@+id/btnISFJ"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/pink"
            android:text="ISFJ" />

        <Button
            android:id="@+id/btnINFJ"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/skygreen"
            android:text="INFJ" />

        <Button
            android:id="@+id/btnINTJ"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/babypink"
            android:text="INTJ" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnISTP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/pink"
            android:text="ISTP" />

        <Button
            android:id="@+id/btnISFP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/skygreen"
            android:text="ISFP" />

        <Button
            android:id="@+id/btnINFP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/babypink"
            android:text="INFP" />

        <Button
            android:id="@+id/btnINTP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/sky"
            android:text="INTP" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnESTP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/skygreen"

            android:text="ESTP" />

        <Button
            android:id="@+id/btnESFP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/babypink"
            android:text="ESFP" />

        <Button
            android:id="@+id/btnENFP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/sky"
            android:text="ENFP" />

        <Button
            android:id="@+id/btnENTP"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/main_item_button"
            android:backgroundTint="@color/pink"
            android:text="ENTP" />
    </TableRow>

    <TableRow>

    <Button
        android:id="@+id/btnESTJ"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/main_item_button"
        android:backgroundTint="@color/babypink"
        android:text="ESTJ" />

    <Button
        android:id="@+id/btnESFJ"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/main_item_button"
        android:backgroundTint="@color/sky"
        android:text="ESFJ" />
    <Button
        android:id="@+id/btnENFJ"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/main_item_button"
        android:text="ENFJ"
        android:backgroundTint="@color/pink"
        />
    <Button
        android:id="@+id/btnENTJ"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/main_item_button"
        android:text="ENTJ"
        android:backgroundTint="@color/skygreen"
        />
    </TableRow>
</TableLayout>
</LinearLayout>